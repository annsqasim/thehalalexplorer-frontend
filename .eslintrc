{
  "env": {
    "browser": true, // Or "node": true if it's a Node.js project
    "es2021": true   // Or a newer version like "es2022", "es2023", etc.
  },
  "extends": [
    "eslint:recommended" // Starts with ESLint's recommended baseline rules
  ],
  "parserOptions": {
    "ecmaVersion": "latest", // Or the specific ES version like 12 (for ES2021)
    "sourceType": "module" // Use "script" if you are not using ES modules
  },
  "rules": {
    // You can override or add rules here
    "no-unused-vars": "warn", // Warns about unused variables
    "no-console": "off",      // Allows console.log (consider "warn" or "error" for production)
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "always-multiline"]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.log"
  ]
}